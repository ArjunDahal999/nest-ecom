model User {
    id        String    @id @default(cuid())
    email     String    @unique
    createdAt DateTime  @default(now()) @db.Timestamptz(6)
    updatedAt DateTime  @updatedAt
    Role      Role      @default(CUSTOMER)
    account   Account?
    session   Session?
    profile   Profile?
    deletedAt DateTime?

    @@index([email])
    @@map("users")
}
